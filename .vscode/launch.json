{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "--no-cov"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: CLI",
            "type": "debugpy",
            "request": "launch",
            "module": "earnorm.cli",
            "args": [],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}